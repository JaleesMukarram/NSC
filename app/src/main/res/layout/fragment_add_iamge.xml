<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <GridView
        android:id="@+id/GVdialogue_select_image_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RV_SelectMultipleImageSelectedImages"
        android:fastScrollAlwaysVisible="true"
        android:numColumns="3">

    </GridView>


    <ImageView
        android:id="@+id/IV_SelectMultipleImageBackButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:src="@drawable/ic_arrow_back_grey_24" />

    <TextView
        android:id="@+id/textSayinhSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusedByDefault="true"
        android:padding="5dp"
        android:text="Select Images"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_SelectMultipleImageSelectedImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSayinhSelectImage"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:scrollbars="horizontal"

        />


</RelativeLayout>