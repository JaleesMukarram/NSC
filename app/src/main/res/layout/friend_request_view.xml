<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RLFriendRequestParentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/IVFriendRequestProfileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"

        app:srcCompat="@drawable/ic_account_default_white" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"

        android:layout_marginTop="23dp"
        android:layout_marginEnd="6dp"

        android:src="@drawable/ic_direction_right_24" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVFriendRequestSchoolShowing"
        android:layout_alignStart="@+id/TVFriendRequestSchoolShowing"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/BTNFriendRequestAcceptRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"

            android:background="@drawable/btn_round_primary_stroke"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp">


        </Button>

        <Button
            android:id="@+id/BTNFriendRequestRejectRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:background="@drawable/btn_round_grey_stroke"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="@color/darkTextFull"
            android:textSize="14dp">


        </Button>

    </LinearLayout>


    <TextView

        android:id="@+id/TVFriendRequestNameShowing"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"


        android:layout_toEndOf="@+id/IVFriendRequestProfileImage"
        android:inputType="text|textNoSuggestions"
        android:paddingLeft="20dp"
        android:text="Name"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/TVFriendRequestSchoolShowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/TVFriendRequestNameShowing"

        android:layout_alignBottom="@+id/IVFriendRequestProfileImage"


        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/IVFriendRequestProfileImage"
        android:paddingLeft="20dp"
        android:text="School"
        android:textColor="@color/black"
        android:textSize="14dp" />


</RelativeLayout>