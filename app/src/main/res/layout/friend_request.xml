<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <!--    FriendRequest-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"

        android:layout_marginTop="23dp"
        android:layout_marginEnd="6dp"

        android:src="@drawable/ic_direction_right_24" />

    <ImageView
        android:id="@+id/IVFriendRequestProfileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"

        app:srcCompat="@drawable/ic_account_default_white" />


    <TextView

        android:id="@+id/TVFriendRequestNameShowing"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"


        android:layout_toEndOf="@+id/IVFriendRequestProfileImage"
        android:inputType="text|textNoSuggestions"
        android:paddingLeft="20dp"
        android:text="Name"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/TVFriendRequestSchoolShowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/TVFriendRequestNameShowing"

        android:layout_alignBottom="@+id/IVFriendRequestProfileImage"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/IVFriendRequestProfileImage"
        android:paddingLeft="20dp"
        android:text="School"
        android:textColor="@color/black"
        android:textSize="14dp" />


</RelativeLayout>