<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gradientBlue">

    <EditText
            android:id="@+id/ETFragmentNameNameAsking"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ETFragmentNameSectionAsking"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_round_white_stroke"

            android:drawableStart="@drawable/ic_person_white_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/white"
            android:ems="10"

            android:fontFamily="@font/lemon"


            android:hint="Full Name"
            android:inputType="text|textNoSuggestions"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/hintGrey"

            android:textSize="20sp"
            android:textStyle="bold" />

    <EditText
            android:id="@+id/ETFragmentNameSectionAsking"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_round_white_stroke"

            android:drawableStart="@drawable/ic_person_white_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/white"
            android:ems="10"

            android:fontFamily="@font/lemon"


            android:hint="Section"
            android:inputType="text|textNoSuggestions"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/hintGrey"

            android:textSize="20sp"
            android:textStyle="bold" />

    <Spinner
            android:id="@+id/SPRFragmentNameBadgeAsking"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVFragmentNameSelectBadgeShowing"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:padding="20sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ETFragmentNameNameAsking"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/lemon"
            android:text="Enter following information"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/TVFragmentNameSelectBadgeShowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ETFragmentNameSectionAsking"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lemon"
            android:text="Select badge"
            android:textAlignment="center"
            android:textColor="@color/golden"
            android:textSize="14sp"
            android:textStyle="bold" />

</RelativeLayout>