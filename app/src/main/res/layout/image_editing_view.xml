<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RLImageEditingViewMainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <EditText
        android:id="@+id/ETImageEditingViewImageDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:hint="Enter description"
        android:textColor="@color/grey"
        android:textColorHint="@color/golden"
        android:textSize="20sp"
        android:textStyle="normal"

        />


    <ImageView
        android:id="@+id/IVImageEditingViewShowImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ETImageEditingViewImageDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        />

    <TextView
        android:id="@+id/TVImageEditingViewEnableDisableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/enableString"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible" />


</RelativeLayout>