<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TTCustomToastContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ok"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/IVCustomToastIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mood_good_24"

        />


    <TextView
        android:id="@+id/TVCustomToastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        android:text="Toasting please wait..."
        android:textColor="@color/colorPrimary"
        android:textSize="10dp"
        android:textStyle="bold"

        />

</LinearLayout>