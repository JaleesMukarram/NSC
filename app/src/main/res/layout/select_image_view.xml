<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">


    <GridView
        android:id="@+id/GVdialogue_select_image_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RV_SelectMultipleImageSelectedImages"
        android:fastScrollAlwaysVisible="true"

        android:numColumns="3">

    </GridView>


    <TextView
        android:id="@+id/textSayinhSelectImage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:focusedByDefault="true"
        android:padding="5dp"
        android:text="Select Image"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/lemon"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_SelectMultipleImageSelectedImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSayinhSelectImage"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:scrollbars="horizontal"

        />

</RelativeLayout>