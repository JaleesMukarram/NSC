<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/purple_gradient_bg"
        tools:context=".GeneralUserImagesEditingForUploading">


    <RelativeLayout
            android:id="@+id/LLImagesEditingForUploadingBottomOptionContainer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/transparent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/IVGeneralUserAddImagesUploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_send_dark_orange_48" />


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVGeneralUserAddImagesUploadImagesDownPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:layout_toStartOf="@+id/IVGeneralUserAddImagesUploadButton" />

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/RLImagesEditingForUploadingToolsContainer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/IVGeneralUserAddImagesBackButton"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_arrow_back_grey_24" />

        <ImageView
                android:id="@+id/IVGeneralUserAddImagesDeleteButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_delete_grey_24" />


    </RelativeLayout>


    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/VPImagesEditingForUploadingImagesShowing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LLImagesEditingForUploadingBottomOptionContainer"
            android:layout_below="@+id/RLImagesEditingForUploadingToolsContainer"
            android:layout_alignParentStart="true"
            android:background="@color/transparent"
            android:layout_alignParentEnd="true" />

</RelativeLayout>