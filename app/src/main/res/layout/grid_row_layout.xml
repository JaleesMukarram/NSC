<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RLGridRowSingleImageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:focusedByDefault="false"
        android:orientation="vertical"
        android:padding="2dp">


    <ImageView
            android:id="@+id/IVGridRowSingleImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ba" />


    <ImageView
            android:id="@+id/IVGridRowSingleImageUnSelectImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/IVGridRowSingleImage"
            android:layout_alignEnd="@+id/IVGridRowSingleImage"
            android:src="@drawable/ic_close_dark_orange_24"
            android:visibility="invisible" />


</RelativeLayout>