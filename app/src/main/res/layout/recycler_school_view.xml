<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RLRecyclerSchoolViewMainContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gradientBlue"

    android:padding="10dp">

    <!--    RecyclerSchoolView-->

    <ImageView
        android:id="@+id/IVRecyclerSchoolViewSchoolImageShowing"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusable="false"

        android:scaleType="centerCrop"
        android:src="@drawable/nust_cover" />

    <TextView
        android:id="@+id/TVRecyclerSchoolViewSchoolNameShowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IVRecyclerSchoolViewSchoolImageShowing"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:focusable="false"
        android:fontFamily="@font/lemon"
        android:gravity="center"
        android:text="SEECS"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>