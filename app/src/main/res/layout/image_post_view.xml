<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">


    <ImageButton
        android:id="@+id/IBImagePostImageOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TVImagePostSenderNameShowing"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"


        android:background="@color/grey"
        android:padding="20dp"
        android:src="@drawable/ic_list_primary_24" />

    <ImageView
        android:id="@+id/IVImagePostImageShowing"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_below="@+id/TVImagePostSendingDate"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nust_cover" />

    <ImageView

        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/TVImagePostSenderNameShowing"
        android:layout_alignBottom="@+id/TVImagePostSendingDate"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/TVImagePostSendingDate"
        android:src="@drawable/btn_rotnund_ok" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/IVImagePostImageShowing">


    </LinearLayout>


    <TextView
        android:id="@+id/TVImagePostSendingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVImagePostSenderNameShowing"
        android:paddingStart="15dp"
        android:text="20 april 2020"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="@color/darkText"
        android:textSize="11dp"

        />


    <TextView
        android:id="@+id/TVImagePostSenderNameShowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"

        android:inputType="text|textNoSuggestions"
        android:padding="10dp"
        android:text="Post Person Name"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"

        android:textSize="18dp"

        android:textStyle="bold" />


</RelativeLayout>