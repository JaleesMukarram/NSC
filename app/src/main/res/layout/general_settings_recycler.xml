<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:elevation="5dp"
    android:layout_margin="3dp"
    android:background="@color/colorPrimary"

    >


    <ImageView
        android:id="@+id/IVGeneralSettingsIconShowing"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_settings_white_30" />

    <TextView
        android:id="@+id/TVGeneralSettingsNameShowing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"

        android:layout_toRightOf="@+id/IVGeneralSettingsIconShowing"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/TVGeneralSettingsDescriptionShowing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVGeneralSettingsNameShowing"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"

        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/IVGeneralSettingsIconShowing"
        android:padding="5dp"
        android:text="Description"
        android:textColor="@color/grey"
        android:textSize="10dp" />


</RelativeLayout>