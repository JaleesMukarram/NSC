<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_gradient_bg"
    tools:context=".SignIn">


    <Button
        android:id="@+id/BTNSignINSignIN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETSignINPasswordAsking"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"

        android:background="@drawable/bg_round_dark_orange_fill"
        android:fontFamily="@font/lemon"
        android:padding="15dp"
        android:text="Sign IN"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"

        />


    <EditText
        android:id="@+id/ETSignINEmailAsking"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ETSignINPasswordAsking"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_round_white_stroke"

        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:ems="10"

        android:fontFamily="@font/lemon"


        android:hint="Email"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/hintGrey"

        android:textSize="18sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/ETSignINPasswordAsking"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:background="@drawable/btn_round_white_stroke"
        android:drawableStart="@drawable/ic_password"


        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/lemon"

        android:hint="Password"
        android:inputType="textPassword|textNoSuggestions"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"

        android:textColorHint="@color/hintGrey"
        android:textSize="18sp"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/TVSignInErrorShowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ETSignINEmailAsking"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/lemon"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/darkOrange"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/BTNSignINSignUPInstead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="94dp"
        android:fontFamily="@font/lemon"
        android:padding="10dp"
        android:text="Sign UP instead"
        android:textAlignment="viewEnd"
        android:textColor="@color/golden"
        android:textStyle="bold"

        />


</RelativeLayout>